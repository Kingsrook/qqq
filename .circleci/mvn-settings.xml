<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>
        <!-- GitHub Packages (legacy, keep during transition) -->
        <server>
            <id>github-qqq-maven-registry</id>
            <username>${env.QQQ_MAVEN_REGISTRY_USERNAME}</username>
            <password>${env.QQQ_MAVEN_REGISTRY_PASSWORD}</password>
        </server>
        
        <!-- Sonatype Central Portal credentials (for releases) -->
        <server>
            <id>central</id>
            <username>${env.CENTRAL_USERNAME}</username>
            <password>${env.CENTRAL_PASSWORD}</password>
        </server>
        
        <!-- Central Portal Snapshots credentials -->
        <server>
            <id>central-snapshots</id>
            <username>${env.CENTRAL_USERNAME}</username>
            <password>${env.CENTRAL_PASSWORD}</password>
        </server>
    </servers>
</settings>
